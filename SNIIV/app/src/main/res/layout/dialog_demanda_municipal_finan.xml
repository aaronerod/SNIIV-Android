<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_financiamiento"
        android:id="@+id/txtTitle"
        android:layout_marginTop="10dp"
        style="@style/Title"
        android:textSize="15sp"/>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text=""
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/txtMunicipio1"
                android:text="Municipio 1"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                style="@style/EtiquetaMunicipio" />

            <TextView
                android:id="@+id/txtMunicipio2"
                android:text="Municipio 2"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                style="@style/EtiquetaMunicipio" />

            <TextView
                android:id="@+id/txtMunicipio3"
                android:text="Municipio 3"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                style="@style/EtiquetaMunicipio" />

            <TextView
                android:id="@+id/txtOtros"
                android:text="Otros"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                style="@style/EtiquetaMunicipio" />
        </TableRow>
    </TableLayout>
</RelativeLayout>